#!/usr/bin/python

import sys, getopt
import json
import importlib
import inspect
import os
import glob

import importlib.util
import sys


from mTree.runner.runner import Runner

def main(argv):
   inputfile = ''
   outputfile = ''
   try:
      opts, args = getopt.getopt(argv,"hi:o:",["ifile=","ofile="])
   except getopt.GetoptError:
      print('mTreeRunner -i <mtree_configuration_file>')
      sys.exit(2)
   for opt, arg in opts:
      if opt == '-h':
         print('mTreeRunner -i <mtree_configuration_file>')
         sys.exit()
      elif opt in ("-i", "--ifile"):
         inputfile = arg

   print("mTree Runner")

   mtree_runner = Runner(inputfile)
   mtree_runner.runner()

if __name__ == "__main__":
   main(sys.argv[1:])